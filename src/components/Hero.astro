<script>
	const words = [
		"Full-stack",
		"Applications",
		"Indie games",
		"API-driven systems",
	];
	let i = 0,
		j = 0,
		currentWord = "",
		isDeleting = false;
	const typed = document.getElementById("typed");
	type();

	function type() {
		if (i >= words.length) i = 0;
		const word = words[i];

		if (isDeleting) {
			currentWord = word.substring(0, j--);
		} else {
			currentWord = word.substring(0, j++);
		}

		if (typed) {
			typed.textContent = currentWord;
		}

		if (!isDeleting && j === word.length + 1) {
			isDeleting = true;
			setTimeout(type, 800);
		} else if (isDeleting && j === 0) {
			isDeleting = false;
			i++;
			setTimeout(type, 300);
		} else {
			setTimeout(type, isDeleting ? 50 : 120);
		}
	}
</script>
